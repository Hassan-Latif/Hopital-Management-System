@using Microsoft.AspNetCore.Identity
@model IEnumerable<IdentityRole>

@{
    ViewBag.Title = "All Roles";
}
<h1>Roles List</h1>

@if(Model.Any()){
    foreach(var role in Model)
    {
        <a class="btn btn-primary mb-3" asp-action="CreateRole" asp-controller="Administration" >Add new Role</a>
        <div class="card mb-3">
            <div class="card-header">
                Role Id : @role.Id
            </div>
            <div class="card-body">
                <h5 class"card-title">@role.Name</h5>
            </div>
            <div class="card-footer">
                <a  class="btn btn-primary" asp-action="EditRole" asp-controller="Administration" asp-route-id=@role.Id>Edit </a>
                <a  class="btn btn-primary" asp-action="DeleteRole" asp-controller="Administration" asp-route-id=@role.Id>Delete </a>
            </div>
        </div>
    }
}
else{
    <div class="card">
        <div class="card-header">
            No Roles Created Yet
        </div>
        <div class="card-body">
            <h5 class="card-title">
                Use the button below to create the card title
            </h5>
            <a class="btn btn-primary" asp-controller="Administration" asp-action="CreateRole"> Create Role</a>

        </div>

    </div>
}